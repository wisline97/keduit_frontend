        <button onclick="location.href='delAll'">전체삭제</button>
        <br/>
        <br/>
        <hr/>
        <% for(i=0; i<scoreDB.length; i++){%>
            [ 번호 : <%=i+1%> ] &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            [ 점수 : <%=scoreDB[i]%> ] &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button onclick="location.href='updateForm?index=<%=i%>'">수정</button> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button onclick="location.href='del?index=<%=i%>'">삭제</button>
            <br/>
            <br/>
        <%}%>
    </div>
</body>
</html>