<%function sortPrdByKey(prdData) {
    for(var i=0; i<prdData.length; i++) {
      var maxNo = prdData[i]["key"];
      var maxIndex = i;

      for(var j=i; j<prdData.length; j++) {
          if(maxNo < prdData[j]["key"]) {
              maxNo = prdData[j]["key"];
              maxIndex = j;
          }
      }

      var temp = prdData[i];
      prdData[i] = prdData[maxIndex];
      prdData[maxIndex] = temp;
  }
};%>


<%function prdOriginPrice(prdData) {
  for(i=0; i<prdData.length; i++){
    var isInclude = prdData[i]["prdPrice"].includes(",");
  if(isInclude){
    var reducdComma = prdData[i]["prdPrice"].split(",");
    prdData[i]["prdPrice"] = reducdComma.join("");
    prdData[i]["prdPrice"] = prdData[i]["prdPrice"];
  }
}};%>

<% function sortPrdBySales(prdData) {
  for(var i=0; i<prdData.length; i++) {
      var maxNo = prdData[i]["salesQuantity"];
      var maxIndex = i;

      for(var j=i; j<prdData.length; j++) {
          if(maxNo < prdData[j]["salesQuantity"]) {
