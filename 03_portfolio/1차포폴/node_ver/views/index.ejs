  <%function mixDataRandom() {
      for(i=0; i<1000; i++){
          var temp = null;
          while(true){
              var randomIdx1 = parseInt(Math.random()*prdData.length);
              var randomIdx2 = parseInt(Math.random()*prdData.length);
              if(randomIdx1 != randomIdx2){
                  break
              }
          }
        temp = prdData[randomIdx1]; 
        prdData[randomIdx1] = prdData[randomIdx2];
        prdData[randomIdx2] = temp;
      }
  };%>


<%function prdOriginPrice() {
  for(i=0; i<prdData.length; i++){
    var isInclude = prdData[i]["prdPrice"].includes(",");
